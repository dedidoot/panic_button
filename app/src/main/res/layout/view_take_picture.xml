<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:clickable="true">

    <io.fotoapparat.view.CameraView
        android:id="@+id/cameraView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/infoView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/infoView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/rajawali_12dp"
        android:paddingRight="@dimen/rajawali_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/middleGuideline">

        <TextView
            android:id="@+id/titleTextView"
            android:fontFamily="@font/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/rajawali_12dp"
            android:lineSpacingExtra="6sp"
            android:text="Title Photo"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/rajawali_16sp" />

        <TextView
            android:id="@+id/messageTextView"
            android:fontFamily="@font/font_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/rajawali_12dp"
            android:lineSpacingExtra="@dimen/rajawali_6sp"
            android:text="Message photo"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/rajawali_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginBottom="@dimen/rajawali_30dp"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/retakeImageView"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/rajawali_48dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal|bottom"
                app:srcCompat="@drawable/ic_retake" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/takePictureImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:background="@drawable/ic_circle"
                android:paddingLeft="@dimen/rajawali_16dp"
                android:paddingRight="@dimen/rajawali_16dp"
                app:srcCompat="@drawable/ic_white_camera" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/saveImageView"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/rajawali_48dp"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_gravity="center_horizontal|bottom"
                app:srcCompat="@drawable/ic_bullet" />
        </LinearLayout>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/middleGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/framePhotoView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/middleGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cameraView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/resultPictureImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/middleGuideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cameraView" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/closeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/rajawali_24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/flashImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/rajawali_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_on_flash" />

</androidx.constraintlayout.widget.ConstraintLayout>